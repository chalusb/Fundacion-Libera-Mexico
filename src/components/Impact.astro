---
const impact = [
  {
    title: "42 niñas, niños y adolescentes atendidos",
    image: "/images/childs/2.png",
  },
  {
    title: "60,350 comidas servidas",
    image: "/images/bubbles/2.png",
  },
  {
    title: "1,503 atenciones de salud mental",
    image: "/images/bubbles/3.png",
  },
  {
    title: "375 consultas médicas",
    image: "/images/bubbles/4.png",
  },
  {
    title: "376 intervenciones educativas",
    image: "/images/bubbles/5.png",
  },
  {
    title: "374 acompañamientos jurídicos",
    image: "/images/bubbles/1.png",
  },
];
---

<section
  class="w-full mx-auto overflow-hidden w-full relative bg-white min-h-[2rem]"
  style="background-image: url('/images/bg-paper.png'); background-size: cover; background-position: center;"
>
  <div class="mx-auto relative px-4">
    <div class="grid grid-cols-3 gap-4">
      <div class="col-span-1 -ml-4">
        <div
          style="background-image: url('/images/impact/bg.png'); background-size: cover; background-position: center;"
          class="w-full min-h-[90vh] object-cover relative"
        >
          <div
            class="absolute top-2/4 left-1/3 ml-8 -translate-x-1/2 -translate-y-1/2 mt-4"
          >
            <h1 class="text-6xl font-bold text-[#f0559f]">Nuestro impacto</h1>
            <p class="text-3xl text-[#214296] mt-4 mb-8">Avance 2025</p>
            <a
              href="/docs/Informe%20Anual%20LM.pdf"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-[#214296] hover:bg-[#1a357a] text-white font-semibold py-4 px-10 rounded-full text-lg transition-all transform hover:scale-105 shadow-lg uppercase tracking-wider inline-block"
            >
              INFORME ANUAL
            </a>
          </div>
        </div>
      </div>
      <div class="col-span-2">
        <div
          class="max-w-7xl h-full flex flex-col justify-center items-center mx-auto w-full"
        >
          <div
            class="flex items-center justify-between gap-8 place-items-center"
          >
            {
              impact
                .filter((item, index) => index < 3)
                .map((item) => (
                  <div class="mb-4 max-w-[12rem]">
                    <div class="bg-[#f5e2be] p-2">
                      <img
                        src={item.image}
                        alt="Impact"
                        class="w-full h-[10rem] object-cover"
                      />
                      <h2 class="text-xl text-center py-8">{item.title}</h2>
                    </div>
                  </div>
                ))
            }
          </div>
          <div
            class="flex items-center justify-between gap-8 place-items-center"
          >
            {
              impact
                .filter((item, index) => index >= 3)
                .map((item) => (
                  <div class="max-w-[12rem]">
                    <div class="bg-[#f5e2be] p-2">
                      <img
                        src={item.image}
                        alt="Impact"
                        class="w-full h-[10rem] object-cover"
                      />
                      <h2 class="text-xl text-center py-8">{item.title}</h2>
                    </div>
                  </div>
                ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
