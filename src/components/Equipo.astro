---

<section
  class="w-full py-24 relative overflow-hidden"
  style="background-image: url('/images/bg-paper.png'); background-size: cover; background-position: center;"
>
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex justify-center">
      <img
        src={titleImage}
        alt="Nuestro Equipo"
        class="w-[320px] sm:w-[420px] lg:w-[520px] h-auto object-contain"
      />
    </div>

    {sections.map((section) => {
      const isTwo = section.members.length === 2;

      return (
        <div class="mt-12">
          <div class="flex justify-center">
            <div class="bg-[#ef3f98] text-white font-bold px-8 py-3 rounded-md text-xl sm:text-2xl lg:text-3xl">
              {section.title}
            </div>
          </div>

          <div
            class={`mt-10 grid gap-10 ${section.gridClass} ${isTwo ? "justify-items-center sm:max-w-4xl mx-auto" : ""}`}
          >
            {section.members.map((member) => (
              <div class={`flex flex-col gap-4 ${isTwo ? "items-center text-center" : "items-start"}`}>
                <div class="relative w-[170px] h-[170px]">
                  <img
                    src={avatarBg}
                    alt=""
                    class="absolute inset-0 w-full h-full object-contain"
                  />
                  {member.image && (
                    <img
                      src={imagePath(member.image)}
                      alt={member.name}
                      class="absolute inset-[20px] w-[calc(100%-40px)] h-[calc(100%-40px)] object-cover rounded-full"
                    />
                  )}
                </div>
                <div>
                  <p class="text-xl font-bold text-black leading-tight">
                    {member.name}
                  </p>
                  <p class="text-sm text-black/80">{member.role}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      );
    })}
  </div>
</section>
