---
const titleImage = "/images/imgcompleta/img_completa-6-removebg-preview.png";
const decorFrame = "/images/imgcompleta/img_completa-7.png";
---

<section
  class="w-full min-h-[80vh] relative overflow-hidden"
  style="background-image: url('/images/childs/1.png'); background-size: cover; background-position: center;"
>
  <div class="max-w-6xl mx-auto px-6 py-24 relative">
    <div class="flex flex-col items-center text-center gap-4">
      <div class="relative w-full max-w-5xl">
        <img
          src={decorFrame}
          alt=""
          class="w-full h-auto object-contain"
        />
        <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-6 gap-4">
      <img
        src={titleImage}
        alt="Sé un constructor de sueños"
        class="w-[200px] sm:w-[300px] lg:w-[500px] h-auto object-contain"
      />
      <p class="text-[#214296] text-xl sm:text-2xl font-semibold tracking-wide uppercase">
        Campaña de recaudación de fondos
      </p>
        </div>
      </div>
    </div>
  </div>
</section>
