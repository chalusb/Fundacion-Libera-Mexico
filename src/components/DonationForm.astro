---
export interface Props {
  backgroundColor?: string;
  titleColor?: string;
  textColor?: string;
  cardBackgroundColor?: string;
}

const {
  backgroundColor = "bg-gray-50",
  titleColor = "text-gray-900",
  textColor = "text-gray-700",
  cardBackgroundColor = "bg-white",
} = Astro.props;
---

<section class={`${backgroundColor} py-20 px-4 sm:px-6 lg:px-8`}>
  <div class="max-w-4xl mx-auto">
    <!-- Section title -->
    <div class="text-center mb-16">
      <h2 class={`${titleColor} text-3xl sm:text-4xl font-bold mb-4`}>
        Completa tu donativo
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Tu generosidad hace posible que continuemos transformando vidas
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Donation Form -->
      <div
        class={`${cardBackgroundColor} rounded-2xl p-8 shadow-lg border border-gray-100`}
      >
        <h3 class={`${titleColor} text-2xl font-bold mb-6`}>
          Informaci√≥n del donativo
        </h3>

        <form class="space-y-6" id="donation-form">
          <!-- Donation Type -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">
              Tipo de donativo *
            </label>
            <div class="space-y-3">
              <label
                class="flex items-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50"
              >
                <input
                  type="radio"
                  name="donationType"
                  value="unique"
                  class="mr-3"
                  required
                />
                <div>
                  <div class="font-medium">Donativo √önico</div>
                  <div class="text-sm text-gray-500">Una sola vez</div>
                </div>
              </label>
              <label
                class="flex items-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50"
              >
                <input
                  type="radio"
                  name="donationType"
                  value="monthly"
                  class="mr-3"
                />
                <div>
                  <div class="font-medium">Apoyo Mensual</div>
                  <div class="text-sm text-gray-500">
                    Donativo recurrente mensual
                  </div>
                </div>
              </label>
              <label
                class="flex items-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50"
              >
                <input
                  type="radio"
                  name="donationType"
                  value="constructor"
                  class="mr-3"
                />
                <div>
                  <div class="font-medium">Constructor de Sue√±os</div>
                  <div class="text-sm text-gray-500">
                    Donativo recurrente especial
                  </div>
                </div>
              </label>
            </div>
          </div>

          <!-- Amount -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">
              Monto del donativo *
            </label>
            <div class="grid grid-cols-2 gap-3 mb-4">
              <button
                type="button"
                class="amount-btn p-3 border border-gray-300 rounded-lg hover:bg-gray-50"
                data-amount="200">$200</button
              >
              <button
                type="button"
                class="amount-btn p-3 border border-gray-300 rounded-lg hover:bg-gray-50"
                data-amount="500">$500</button
              >
              <button
                type="button"
                class="amount-btn p-3 border border-gray-300 rounded-lg hover:bg-gray-50"
                data-amount="1000">$1,000</button
              >
              <button
                type="button"
                class="amount-btn p-3 border border-gray-300 rounded-lg hover:bg-gray-50"
                data-amount="2000">$2,000</button
              >
            </div>
            <div class="relative">
              <span
                class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500"
                >$</span
              >
              <input
                type="number"
                id="customAmount"
                name="amount"
                min="1"
                required
                class="w-full pl-8 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-foundation-primary focus:border-transparent"
                placeholder="Otro monto"
              />
            </div>
          </div>

          <!-- Personal Information -->
          <div class="space-y-4">
            <h4 class={`${titleColor} font-semibold text-lg`}>
              Informaci√≥n personal
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label
                  for="firstName"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  Nombre *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-foundation-primary focus:border-transparent"
                  placeholder="Tu nombre"
                />
              </div>
              <div>
                <label
                  for="lastName"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  Apellido *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-foundation-primary focus:border-transparent"
                  placeholder="Tu apellido"
                />
              </div>
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Correo electr√≥nico *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-foundation-primary focus:border-transparent"
                placeholder="tu@email.com"
              />
            </div>

            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Tel√©fono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-foundation-primary focus:border-transparent"
                placeholder="Tu n√∫mero de tel√©fono"
              />
            </div>
          </div>

          <!-- Anonymous donation -->
          <div class="flex items-center">
            <input
              type="checkbox"
              id="anonymous"
              name="anonymous"
              class="mr-3"
            />
            <label for="anonymous" class="text-sm text-gray-700">
              Hacer donativo an√≥nimo
            </label>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-foundation-primary hover:bg-foundation-primary/90 text-white font-semibold py-4 px-6 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-foundation-primary focus:ring-offset-2"
          >
            Proceder al pago
          </button>
        </form>
      </div>

      <!-- Donation Summary -->
      <div class="space-y-8">
        <!-- Impact -->
        <div
          class={`${cardBackgroundColor} rounded-2xl p-8 shadow-lg border border-gray-100`}
        >
          <h3 class={`${titleColor} text-2xl font-bold mb-6`}>Tu impacto</h3>
          <div class="space-y-4">
            <div class="flex items-center">
              <span class="text-2xl mr-4">üçΩÔ∏è</span>
              <div>
                <div class="font-semibold">Comidas servidas</div>
                <div class="text-sm text-gray-600">
                  Con $200 puedes alimentar a 1 persona por 1 semana
                </div>
              </div>
            </div>
            <div class="flex items-center">
              <span class="text-2xl mr-4">üè†</span>
              <div>
                <div class="font-semibold">Refugio seguro</div>
                <div class="text-sm text-gray-600">
                  Con $1,000 puedes mantener el refugio por 1 d√≠a
                </div>
              </div>
            </div>
            <div class="flex items-center">
              <span class="text-2xl mr-4">üíö</span>
              <div>
                <div class="font-semibold">Terapia psicol√≥gica</div>
                <div class="text-sm text-gray-600">
                  Con $500 puedes cubrir 1 sesi√≥n de terapia
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Security -->
        <div class="bg-green-50 border border-green-200 rounded-2xl p-6">
          <div class="flex items-center mb-4">
            <svg
              class="w-6 h-6 text-green-600 mr-3"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h4 class="text-green-800 font-bold">Pago seguro</h4>
          </div>
          <p class="text-green-700 text-sm">
            Tus datos est√°n protegidos con encriptaci√≥n SSL. Aceptamos todas las
            tarjetas principales.
          </p>
        </div>

        <!-- Contact -->
        <div
          class={`${cardBackgroundColor} rounded-2xl p-6 shadow-lg border border-gray-100`}
        >
          <h4 class={`${titleColor} font-semibold mb-3`}>¬øNecesitas ayuda?</h4>
          <p class={`${textColor} text-sm mb-4`}>
            Si tienes dudas sobre el proceso de donaci√≥n, cont√°ctanos.
          </p>
          <a
            href="mailto:contacto@liberamexico.org"
            class="text-foundation-primary hover:underline text-sm font-medium"
          >
            contacto@liberamexico.org
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Manejar el formulario de donaci√≥n
  document.addEventListener("DOMContentLoaded", () => {
    const donationForm = document.getElementById(
      "donation-form"
    ) as HTMLFormElement;
    const amountButtons = document.querySelectorAll(".amount-btn");
    const customAmountInput = document.getElementById(
      "customAmount"
    ) as HTMLInputElement;

    if (!donationForm) return;

    // Manejar botones de monto
    amountButtons.forEach((button) => {
      button.addEventListener("click", () => {
        // Remover selecci√≥n anterior
        amountButtons.forEach((btn) =>
          btn.classList.remove(
            "bg-foundation-primary",
            "text-white",
            "border-foundation-primary"
          )
        );
        amountButtons.forEach((btn) => btn.classList.add("border-gray-300"));

        // Seleccionar bot√≥n actual
        button.classList.add(
          "bg-foundation-primary",
          "text-white",
          "border-foundation-primary"
        );
        button.classList.remove("border-gray-300");

        // Establecer valor en el input
        const amount = button.getAttribute("data-amount");
        if (amount && customAmountInput) {
          customAmountInput.value = amount;
        }
      });
    });

    // Manejar input personalizado
    if (customAmountInput) {
      customAmountInput.addEventListener("input", () => {
        // Remover selecci√≥n de botones cuando se escribe manualmente
        amountButtons.forEach((btn) => {
          btn.classList.remove(
            "bg-foundation-primary",
            "text-white",
            "border-foundation-primary"
          );
          btn.classList.add("border-gray-300");
        });
      });
    }

    // Manejar env√≠o del formulario
    donationForm.addEventListener("submit", (e) => {
      e.preventDefault();

      const formData = new FormData(donationForm);
      const submitButton = donationForm.querySelector(
        'button[type="submit"]'
      ) as HTMLButtonElement;

      if (!submitButton) return;

      // Cambiar el texto del bot√≥n para mostrar que se est√° procesando
      const originalText = submitButton.textContent;
      submitButton.textContent = "Procesando...";
      submitButton.disabled = true;

      // Simular procesamiento (aqu√≠ conectar√≠as con tu pasarela de pagos)
      setTimeout(() => {
        alert(
          "¬°Gracias por tu donativo! Te redirigiremos a la pasarela de pagos."
        );
        // Aqu√≠ redirigir√≠as a la pasarela de pagos real
        // window.location.href = 'https://tu-pasarela-de-pagos.com';

        if (submitButton && originalText) {
          submitButton.textContent = originalText;
          submitButton.disabled = false;
        }
      }, 2000);
    });
  });
</script>
