---
export interface Props {
  backgroundColor?: string;
  textColor?: string;
  linkColor?: string;
  logoColor?: string;
}

const {
  backgroundColor = "bg-white",
  textColor = "text-gray-800",
  linkColor = "text-gray-800 hover:text-foundation-primary",
  logoColor = "text-gray-800",
} = Astro.props;
---

<div
  style="background-image: url('/images/bg-paper.png'); background-size: cover; background-position: center;"
>
  <footer
    class={`${backgroundColor} py-16 px-4 sm:px-6 lg:px-8 shadow-lg rounded-lg border-t border-gray-300 rounded-tr-[40px] rounded-tl-[40px]`}
  >
    <div class="max-w-7xl mx-auto">
      <!-- Main footer content -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12 mb-8">
        <!-- Columna Izquierda: Logo y Contáctanos -->
        <div>
          <!-- Logo -->
          <div class="mb-6">
            <img src="/logo.png" alt="Logo Libera México" class="w-auto h-16" />
          </div>

          <!-- Email removed -->
        </div>

        <!-- Columna Central: Menu -->
        <div>
          <h3 class={`${logoColor} text-lg font-bold mb-4`}>Menu</h3>
          <nav class="space-y-3">
            <a
              href="/"
              class={`${linkColor} block text-lg font-normal transition-colors duration-200`}
            >
              Inicio
            </a>
            <a
              href="/#"
              class={`${linkColor} block text-lg font-normal transition-colors duration-200`}
            >
              Dona Ahora
            </a>
            <!-- Denuncia removed -->
          </nav>
        </div>

        <!-- Columna Derecha: Social -->
        <div>
          <h3 class={`${logoColor} text-lg font-bold mb-4`}>Social</h3>
          <div class="space-y-3">
            <!-- Instagram -->
            <a
              href="https://www.instagram.com/fundacionliberamexico/"
              target="_blank"
              rel="noopener noreferrer"
              class={`${linkColor} flex items-center gap-3 text-lg transition-colors duration-200`}
              aria-label="Instagram Fundación Libera México"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                ></path>
              </svg>
              <span>Instagram</span>
            </a>

            <!-- Email -->
            <a
              href="mailto:contacto@liberamexico.org"
              class={`${linkColor} flex items-center gap-3 text-lg transition-colors duration-200`}
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <span>contacto@liberamexico.org</span>
            </a>

            <!-- Horario -->
            <div class={`${textColor} flex items-center gap-3 text-lg`}>
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Lun - Vie: 9 AM - 6 PM</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Línea divisoria -->
      <div class="border-t border-gray-300 my-8"></div>

      <!-- Bottom section -->
      <div
        class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4"
      >
        <!-- Copyright -->
        <div class={`${textColor} text-md`}>
          <p>&copy; Fundación Libera México.</p>
          <p>All Rights Reserved 2026</p>
        </div>

        <!-- Dirección y Teléfono -->
        <div class={`${textColor} text-md text-left md:text-right`}>
          <p>Av Santa Fe 505, Cuajimalpa México, México, CP</p>
          <p>Tel. +(52) 55 88 392792</p>
        </div>
      </div>

      <div class="mt-8 text-center">
        <a
          href="https://www.cssoftware.org/"
          target="_blank"
          rel="noopener noreferrer"
          class={`${linkColor} text-sm sm:text-base`}
        >
          Desarrollado por CSSoftware
        </a>
      </div>
    </div>
  </footer>
</div>

