---
export interface Props {
  textColor?: string;
  buttonColor?: string;
  buttonTextColor?: string;
}

const links = [
  {
    label: "Inicio",
    href: "/",
  },
  {
    label: "Quiénes somos",
    href: "/about",
  },
  {
    label: "Impacto",
    href: "/#impacto",
  },
  {
    label: "Denuncia",
    href: "/denuncia",
  },
  {
    label: "Constructor de Sueños",
    href: "/#constructor",
  },
  {
    label: "Contacto",
    href: "/contacto",
  },
];
// Obtener la ruta actual
const currentPath = Astro.url.pathname;

// Función para determinar si un enlace está activo
const isActive = (path: string) => {
  if (path === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(path);
};

// Clases para enlaces activos e inactivos
const activeLinkClass =
  "relative text-[#254687] text-base h-full flex items-center font-medium hover:text-[#254687] transition-colors duration-200";
const inactiveLinkClass =
  "relative text-[#4B5563] text-base h-full flex items-center font-medium hover:text-[#254687] transition-colors duration-200";
---

<header class="bg-white shadow-sm fixed top-0 left-0 w-full z-50">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <div class="flex flex-col max-h-16">
          <img src="/logo.png" alt="Logo" class="h-12" />
        </div>
      </a>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-6 lg:space-x-8 h-full">
        {
          links.map((link) => (
            <a
              href={link.href}
              class={isActive(link.href) ? activeLinkClass : inactiveLinkClass}
            >
              {link.label}

              {isActive(link.href) && (
                <span class="absolute bottom-0 left-0 w-full h-1 bg-[#254687]" />
              )}
            </a>
          ))
        }
      </nav>

      <!-- CTA Button -->
      <div class="flex items-center max-sm:hidden">
        <a
          href="/#"
          class="bg-[#EC4899] text-white px-8 py-3 rounded-full font-semibold text-sm tracking-wide hover:opacity-90 transition-opacity duration-200 shadow-sm"
        >
          DONA AHORA
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          id="mobile-menu-button"
          class="text-gray-600 hover:text-gray-900 focus:outline-none focus:text-gray-900"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div
        class="px-4 pt-4 pb-6 space-y-2 sm:px-6 border-t border-gray-200 bg-white"
      >
        <a
          href="/"
          class={`block px-4 py-3 text-base font-medium hover:bg-gray-50 rounded-md ${
            isActive("/")
              ? "text-[#254687] underline decoration-[#254687] decoration-2 underline-offset-4"
              : "text-[#4B5563] hover:text-[#254687]"
          }`}
        >
          Inicio
        </a>
        <a
          href="/about"
          class={`block px-4 py-3 text-base font-medium hover:bg-gray-50 rounded-md ${
            isActive("/about")
              ? "text-[#254687] underline decoration-[#254687] decoration-2 underline-offset-4"
              : "text-[#4B5563] hover:text-[#254687]"
          }`}
        >
          Quiénes somos
        </a>
        <a
          href="/#impacto"
          class="block px-4 py-3 text-base font-medium text-[#4B5563] hover:text-[#254687] hover:bg-gray-50 rounded-md"
        >
          Impacto
        </a>
        <a
          href="/denuncia"
          class={`block px-4 py-3 text-base font-medium hover:bg-gray-50 rounded-md ${
            isActive("/denuncia")
              ? "text-[#254687] underline decoration-[#254687] decoration-2 underline-offset-4"
              : "text-[#4B5563] hover:text-[#254687]"
          }`}
        >
          Denuncia
        </a>
        <a
          href="/#constructor"
          class="block px-4 py-3 text-base font-medium text-[#4B5563] hover:text-[#254687] hover:bg-gray-50 rounded-md"
        >
          Constructor de Sueños
        </a>
        <a
          href="/contacto"
          class={`block px-4 py-3 text-base font-medium hover:bg-gray-50 rounded-md ${
            isActive("/contacto")
              ? "text-[#254687] underline decoration-[#254687] decoration-2 underline-offset-4"
              : "text-[#4B5563] hover:text-[#254687]"
          }`}
        >
          Contacto
        </a>
        <a
          href="/#"
          class="block px-4 py-3 text-base font-semibold text-white bg-[#EC4899] hover:bg-[#EC4899]/90 rounded-full text-center mt-4 shadow-sm"
        >
          DONA AHORA
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Manejar el menú móvil
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", () => {
        // Toggle del menú
        mobileMenu.classList.toggle("hidden");

        // Cambiar el icono del botón
        const icon = mobileMenuButton.querySelector("svg");
        if (icon) {
          if (mobileMenu.classList.contains("hidden")) {
            // Mostrar icono de hamburguesa
            icon.innerHTML =
              '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          } else {
            // Mostrar icono de X
            icon.innerHTML =
              '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
          }
        }
      });

      // Cerrar menú al hacer clic en un enlace
      const mobileMenuLinks = mobileMenu.querySelectorAll("a");
      mobileMenuLinks.forEach((link) => {
        link.addEventListener("click", () => {
          mobileMenu.classList.add("hidden");
          // Restaurar icono de hamburguesa
          const icon = mobileMenuButton.querySelector("svg");
          if (icon) {
            icon.innerHTML =
              '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          }
        });
      });

      // Cerrar menú al hacer clic fuera de él
      document.addEventListener("click", (e) => {
        const target = e.target as Node;
        if (
          target &&
          !mobileMenuButton.contains(target) &&
          !mobileMenu.contains(target)
        ) {
          mobileMenu.classList.add("hidden");
          // Restaurar icono de hamburguesa
          const icon = mobileMenuButton.querySelector("svg");
          if (icon) {
            icon.innerHTML =
              '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          }
        }
      });
    }
  });
</script>
